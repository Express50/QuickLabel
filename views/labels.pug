extends layout

block content
    div(id="one" style={"width": "100%", "position": "fixed", "padding":"25px 25px 0px 25px", "top":"0", "left":"0", "background-color":"rgba(255, 255, 255, 1)"})
        div(style={float: "right"})
            button(id="save" type="button" class="btn btn-primary btn-sm" style={"width": "70px"}) #{save_status}
        div(style={"text-align": "center", "font-size":"20px", "right": 0})
            span(style={'margin-right': '10px'})
                if index_id > 0
                    - var prev = index_id - 1
                    a(href=prev) <
            span(id="cur_id") #{cur_id}
            span(style={'margin-left': '10px'})
                if index_id < max_index - 1
                    - var next = index_id + 1
                    a(href=next) >
        br
        div
            each value in label_map
                form(action="/" + cur_id + "/save" method='get')
                    div(style={display: "inline-block", width: '130px'}) #{value["Variable"]}
                    div(style={display: "inline-block"})
                        each option in value["Options"]
                            if option === " "
                                - var input_class = "input_form form-control"
                                - var input_value = labels[value["Variable"]][0]
                            else
                                - var input_class = "input_form"
                                - var input_value = option
                            input(style={"margin-left": '10px'} class=input_class type=value["Type"] name=value["Variable"] autocomplete="off" value=input_value checked=(labels[value["Variable"]].indexOf(option) > -1 ? "checked" : undefined))
                            |  #{option}
                br
    div(id="two" style={"position": "relative", "z-index": "-1"})
        block records