extends layout

block content
    div(id="sideone" class="container" style={"width": "40%", "max-width": "40%", "position":"fixed", "left": "0", "height":"100%"})
        p Variables:
        div(class="container" style={"width": "100%", "max-width": "100%", "height":"90%", "overflow-y": "scroll"})
            div(class="row")
                each value in label_map
                    div(class="col-lg-12")
                        if value["Type"] === "text" || value["Type"] === "date"
                            if labels[value["Variable"]] === undefined || labels[value["Variable"]].length === 0
                                - var input_value = ""
                            else
                                - var input_value =  labels[value["Variable"]][0]
                            - var input_class = "input_form form-control"
                            input(type=value["Type"] class=input_class name=value["Variable"] autocomplete="off"
                                value=input_value placeholder=value["Variable"])
                        else
                            - var input_class = "input_form"
                            div(class="button-group")
                                button(type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown")
                                    span #{value["Variable"]} &nbsp;
                                    span(class="caret")
                                ul(class="dropdown-menu drop-override")
                                    each option in value["Options"]
                                        if option === undefined || option === "" || option === " "
                                            - var input_value = labels[value["Variable"]][0]
                                        else
                                            - var input_value = option
                                        li
                                            a(href="#" class="small" data-value=input_value tabIndex="-1")
                                                input(type=value["Type"] class=input_class name=value["Variable"] autocomplete="off" value=input_value checked=(labels[value["Variable"]].indexOf(option) > -1 ? "checked" : undefined))
                                                | &nbsp;#{option}
                    div(class="col-lg-12")
                        br
                div(class="col-lg-12")
                    br

    div(id="one" style={position: "fixed", width:"60%", "padding": "25px 25px 0px 25px", "top": "0",
        "left": "40%", "background-color": "rgba(255, 255, 255, 1)"})
        div(style={display: "inline-block", "text-align": "center", margin: "0 0 0 0",  width:"20%", "font-size": "20px", "right": 0})
            span(style={'margin-right': '10px'})
                if index_id > 0
                    - var prev = index_id - 1
                    a(href=prev) <
            span(id="cur_id") #{cur_id}
            span(style={'margin-left': '10px'})
                if index_id < max_index - 1
                    - var next = index_id + 1
                    a(href=next) >
        div(style={display: "inline-block", width:"80%", margin: "0 0 0 0", "text-align": "right", "right":0, "padding": "25px 25px 0px 25px", "top": "0"})
            button(id="save" type="button" class="btn btn-primary btn-sm" style={"width": "70px"}) #{save_status}
        br
    div(id="searchbar" style={
        position: "fixed",
        width: "30%",
        margin: "10px 10px 0 0",
        "text-align": "right",
        right: "0",
        padding: "0px 0px 0px 0px",
        top: "0",
        display: "none"
    })
        div(class="input-group mb-2 mr-sm-2 panel panel-default")
            input(type="text" id="searchText" class="form-control" placeholder="Search" style={"border": "0"})
            span(class="input-group-btn")
                button(class="btn btn-default" type="button" data-search="prev" style={"border": "0"})
                    span(class="glyphicon glyphicon-chevron-up")
            span(class="input-group-btn" )
                button(type="button" data-search="next" class="btn btn-default" style={"border": "0"})
                    span(class="glyphicon glyphicon-chevron-down")
            span(class="input-group-btn" )
                button(type="button" data-search="clear" class="btn btn-default" style={"border": "0"})
                    span(class="glyphicon glyphicon-remove")


    div(id="two" class="searchable" style={"position": "relative", "z-index": "-2", left:"40%", width:"60%"})
        block records